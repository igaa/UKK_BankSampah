@model KKN_UKK.Models.Master.MasterSampah

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card" style="width: auto;">
    <div class="card-body">
        <h4>@ViewData["Title"]</h4>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="InsertSampah">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nama" class="control-label"></label>
                        <input asp-for="Nama" class="form-control" />
                        <span asp-validation-for="Nama" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <select asp-for="Category" class="form-control">
                            <option value=""> Pilih Category </option>
                            @foreach (var item in ViewBag.MasterSampah)
                            {
                                <option value="@item.Value"> @item.Nama </option>
                            }
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Harga" class="control-label"></label>
                        <input asp-for="Harga" class="form-control" />
                        <span asp-validation-for="Harga" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Unit" class="control-label"></label>
                        <input asp-for="Unit" class="form-control" />
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="MasterSampah">Back to List</a>
        </div>

    </div>
</div>
<hr />

