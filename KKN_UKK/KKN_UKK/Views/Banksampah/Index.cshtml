@model IEnumerable<KKN_UKK.Models.Transaksi.T_TransaksiTimbangan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card" style="width: auto;">
    <div class="card-header">
        <a asp-action="TimbanganCreate" class="btn btn-primary btn-sm">Create New</a>
        <br />
    </div>
    <div class="card-body">
        
        <div class="col-md-12 row">
            <table class="table table-striped table-responsive" id="Datatables">
                <thead>
                    <tr>
                        <th>
                            Tanggal
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Location)
                        </th>
                        <th>
                            Nama Nasabah
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Items)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category)
                        </th>
                        <th>
                            Harga Satuan
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Qty)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Unit)
                        </th>
                        <th>
                            Total
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateAt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NamaNasabah)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Items)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HargaSatuan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Qty)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Unit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalHarga)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                    
                            <td>
                                <div class="btn-group">
                                    <span data-toggle="dropdown"><i class="fas fa-ellipsis-h"></i></span>
                                    <div class="dropdown-menu">
                                         <a asp-action="TimbanganEdit" asp-route-id="@item.Id" class="dropdown-item">Edit</a> 
                                         <a asp-action="TimanganDetails" asp-route-id="@item.Id" class="dropdown-item">Detail</a>
                                         <a asp-action="TimbanganDelete" asp-route-id="@item.Id" class="dropdown-item"> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Script{ 
<script>
    $(document).ready(function () {

        $('#Datatables').DataTable();
    }); 
</script>

}
