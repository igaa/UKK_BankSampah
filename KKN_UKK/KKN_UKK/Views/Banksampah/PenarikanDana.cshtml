@model IEnumerable<KKN_UKK.Models.Transaksi.T_Mutasi>

@{
    ViewData["Title"] = "PenarikanDana";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card" style="width: auto;">
    <div class="card-header">
        <a asp-action="CreatePencairan" class="btn btn-sm btn-primary">Create New</a>
        <br />
    </div>
    <div class="card-body">
        <table class="table table-responsive table-striped" id="Datatables">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NamaNasabah)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Jumlah)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Decription)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NamaNasabah)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Jumlah)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Decription)
                        </td>
                        <td>
                            <div class="btn-group">
                                <span data-toggle="dropdown"><i class="fas fa-ellipsis-h"></i></span>
                                <div class="dropdown-menu">
                                    <a asp-action="EditPencarian" class="dropdown-item" asp-route-id="@item.Id">Edit</a>
                                    <a asp-action="DetailPencarian" class="dropdown-item" asp-route-id="@item.Id">Details</a>
                                    <a asp-action="DeletePencarian" class="dropdown-item" asp-route-id="@item.Id">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section Script{
    <script>
    $(document).ready(function () {

        $('#Datatables').DataTable();
    });
    </script>

}