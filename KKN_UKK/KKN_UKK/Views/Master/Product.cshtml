@model IEnumerable<KKN_UKK.Models.Master.Master>

@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card" style="width: auto;">
    <div class="card-header">
        <a asp-action="CreateProduct" class="btn btn-sm btn-primary">Create New</a>
        <br />
    </div>
    <div class="card-body">
        <table class="table table-striped table-responsive" id="Datatables">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nama)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Value)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nama)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Value)
                        </td>
                        <td>
                            <div class="btn-group">
                                <span data-toggle="dropdown"><i class="fas fa-ellipsis-h"></i></span>
                                <div class="dropdown-menu">
                                    <a asp-action="EditProduct" asp-route-id="@item.Id" class="dropdown-item">Edit</a>
                                    <a asp-action="DetailProduct" asp-route-id="@item.Id" class="dropdown-item">Detail</a>
                                    <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="dropdown-item">Delete</a>

                                </div>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Script{
    <script>
    $(document).ready(function () {

        $('#Datatables').DataTable();
    });
    </script>

}